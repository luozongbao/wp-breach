{
    "name": "luozongbao/wp-breach",
    "description": "WordPress Security Vulnerability Scanner and Management Plugin",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "luozongbao",
            "email": "luo.zongbao@outlook.com",
            "homepage": "https://github.com/luozongbao"
        }
    ],
    "keywords": [
        "wordpress",
        "security",
        "vulnerability",
        "scanner",
        "performance"
    ],
    "homepage": "https://github.com/luozongbao/wp-breach",
    "support": {
        "issues": "https://github.com/luozongbao/wp-breach/issues",
        "source": "https://github.com/luozongbao/wp-breach"
    },
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6",
        "phpcompatibility/php-compatibility": "^9.3",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
        "wp-coding-standards/wpcs": "^2.3",
        "phpstan/phpstan": "^1.4",
        "phpmd/phpmd": "^2.11"
    },
    "autoload": {
        "psr-4": {
            "WP_Breach\\": "includes/",
            "WP_Breach\\Admin\\": "admin/",
            "WP_Breach\\Public\\": "public/",
            "WP_Breach\\Performance\\": "includes/performance/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WP_Breach\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "phpunit"
        ],
        "test:unit": [
            "phpunit --testsuite=unit"
        ],
        "test:integration": [
            "phpunit --testsuite=integration"
        ],
        "test:performance": [
            "phpunit --testsuite=performance"
        ],
        "test:coverage": [
            "phpunit --coverage-html tests/coverage/html --coverage-clover tests/coverage/clover.xml"
        ],
        "cs:check": [
            "phpcs --standard=WordPress --extensions=php --ignore=vendor/,tests/coverage/,node_modules/ ."
        ],
        "cs:fix": [
            "phpcbf --standard=WordPress --extensions=php --ignore=vendor/,tests/coverage/,node_modules/ ."
        ],
        "analyze": [
            "phpstan analyse --level=5 includes/ admin/ public/"
        ],
        "analyze:md": [
            "phpmd includes/,admin/,public/ text cleancode,codesize,controversial,design,naming,unusedcode"
        ],
        "quality": [
            "@cs:check",
            "@analyze",
            "@test"
        ],
        "install-codestandards": [
            "Dealerdirect\\Composer\\Plugin\\Installers\\PHPCodeSniffer\\Plugin::run"
        ],
        "setup:test-env": [
            "bash bin/install-wp-tests.sh wp_breach_test root '' localhost latest"
        ],
        "benchmark": [
            "phpunit --testsuite=performance --group=benchmark"
        ]
    },
    "scripts-descriptions": {
        "test": "Run all tests",
        "test:unit": "Run unit tests only",
        "test:integration": "Run integration tests only", 
        "test:performance": "Run performance tests only",
        "test:coverage": "Run tests with coverage report",
        "cs:check": "Check code standards compliance",
        "cs:fix": "Fix code standards violations",
        "analyze": "Run static analysis with PHPStan",
        "analyze:md": "Run mess detection analysis",
        "quality": "Run complete quality checks",
        "setup:test-env": "Set up WordPress testing environment",
        "benchmark": "Run performance benchmarks"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "extra": {
        "wordpress-install-dir": "/tmp/wordpress",
        "wordpress-tests-dir": "/tmp/wordpress-tests-lib"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
